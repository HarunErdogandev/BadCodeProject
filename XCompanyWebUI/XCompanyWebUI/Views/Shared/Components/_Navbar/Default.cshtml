                    <a class="nav-link" asp-action="CompanyEdit" asp-controller="Company">Firma Düzenle</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Firmalar
                    </a>
                    <ul class="dropdown-menu">
                        @foreach (var item in Model)
                        {
                            <li><a class="dropdown-item" href="/Company/CompanyExpens?company=@item.CompanyId">@item.CompanyName</a></li>
                        }
                        
                    </ul>
                </li>
            </ul>
        </div>
    </div>
