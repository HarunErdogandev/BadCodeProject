@using XCompanyWebUI.Models.Entities;
@model List<Company>


<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Firma</th>
            <th scope="col">Sahibi</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
       @{
           foreach (var company in Model)
            {
                <tr>
                    <th scope="row">@company.CompanyId</th>
                    <td>@company.CompanyName</td>
                    <td>@company.OwnerName</td>
                    <td>

                        <a href="@Url.Action("CompanyDelete",new{id=company.CompanyId})" type="button" class="btn btn-danger">Sil</a>
                        <button type="button" class="btn btn-info">Düzenle</button>
                    </td>

                </tr>
            }
           
       }     
        
        
    </tbody>
</table>