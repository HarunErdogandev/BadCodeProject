@using XCompanyWebUI.Models.Entities;

@model CompanyViewModel

@{
    Layout = "UILayout";
}





<div class="EditDeptModal">
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Company" asp-action="CompanyDeptEdit">

                        <div class="mb-3">
                            <label for="price-name" class="col-form-label">Borç</label>
                            <input name="ExpenseAmount" type="text" class="form-control" id="price-name">
                            @*<input style="display:none" type="text" name="company" value="@Model.GetCompany.CompanyId" />*@
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button  class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>
               
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="">Yeni Kayıt Ekle</button>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Yeni işlem formu</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form asp-action ="CompanyExpensAdd" method="post">
                            <div class="mb-3">
                                <label for="Date-name" class="col-form-label">Tarih</label>
                                <input name="ExpenseDate" type="date" class="form-control" id="date-name">
                            </div>
                            <div class="mb-3">
                                <label for="company-name" class="col-form-label">Firma</label>
                                <select name="CompanyId" class="form-select" aria-label="Default select example">
                                    <option selected>Open this select menu</option>
                                    @foreach (var item in Model.CompanyList)
                                    {
                                        <option value="@item.CompanyId">@item.CompanyName</option>

                                    }
                                    
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="price-name" class="col-form-label">Verilen Tutar</label>
                                <input name="ExpenseAmount" type="text" class="form-control" id="price-name">
                            </div>
                            <div class="mb-3">
                                <label for="description-text" class="col-form-label">Açıklama</label>
                                <textarea name="ExpensName" class="form-control" id="message-text"></textarea>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Çık</button>
                                <button class="btn btn-primary">Kaydet</button>
                            </div>
                        </form>

                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
<div class="container">
    <div class="row mt-3 row-information">
        <div class="col-9">
            <div class="information" style="display: flex;">
                <div class="person-img">
                    <img src="/XFirmatakipFrontEnd/images/360_F_243123463_zTooub557xEWABDLk0jJklDyLSGl2jrr.jpg" alt="" srcset="">
                </div>
                <div class="body">
                    <div class="name-group">
                        <span class="person-information">Ad:</span>
                        <span class="db-result">@Model.GetCompany.OwnerName</span>
                    </div>
                    <div class="name-group">
                        <span class="person-information">Soyad:</span>
                        <span class="db-result">@Model.GetCompany.OwnerSurName</span>
                    </div>
                    <div class="name-group">
                        <span class="person-information">Firma İsmi:</span>
                        <span class="db-result">@Model.GetCompany.CompanyName</span>
                    </div>
                    <div class="name-group">
                        <span class="person-information">Telefon:</span>
                        <span class="db-result">@Model.GetCompany.OwnerPhone</span>
                    </div>
                    <div class="name-group">
                        <span class="person-information">Adres:</span>
                        <span class="db-result">@Model.GetCompany.OwnerAdress</span>
                    </div>
                </div>
            </div>


        </div>
        <div class="col-3">

            <div class="remaining-dept">
                <div class="title">Kalan Borç</div>
                <div class="group" style="display: flex;">
                    <div class="money-icon">
                        <img src="/XFirmatakipFrontEnd/icon/money-svgrepo-com.svg" alt="">
                    </div>
                    <div class="price-grp">
                        <span class="price">@Model.GetCompany.CompanyDebt</span>
                        <span class="T">₺</span>
                    </div>
                </div>
                <button style="width: 75%; margin-bottom: 2px;" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    Düzenle
                </button>
                @*<button  type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="">Düzenle</button>*@
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="title-panel">

            @Model.GetCompany.CompanyName
        </div>
        <div class="tables">
            <div class="data-list">
                <form asp-controller="Company" asp-action="CompanyExpens"  method="get">
                    <div class="" style="display:flex;flex-direction:row">

                    <input type="text" name="search" class="form-control" placeholder="İsim üzerinden arayabilirsin">
                    <input style="display:none" type="text" name="company" value="@Model.GetCompany.CompanyId" />
                        <button type="submit" class="btn btn-info">Search</button>
                    </div>
                </form>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Tarih</th>
                        <th scope="col">Verilen Tutar</th>
                        <th scope="col">Açıklaması</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.ExpenseList)
                    {
                      <tr>
                        <th scope="row">@expense.ExpendId</th>
                        <td>@expense.ExpenseDate</td>
                        <td>@expense.ExpenseAmount ₺</td>
                        <td>@expense.ExpensName</td>
                        <td>
                                <a href="@Url.Action("CompanyExpenseDelete","Company",new{delete=expense.ExpendId,company=expense.CompanyId})
                                " type="button" class="btn btn-danger">Sil</a>
                            <button type="button" class="btn btn-info">Güncelle</button>
                        </td>
                      </tr>
                        
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>